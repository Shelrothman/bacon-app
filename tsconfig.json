{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "jsx": "react-jsx",
        "strict": true,
        "resolveJsonModule": true,
        "moduleResolution": "Node",
        "target": "ES2020",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "lib": [
            "dom.iterable",
            "ES6",
            "DOM",
            "ESNext"
        ]
    },
    // FUTURE: todo may need to include ./app/**/* for typescript to work
    // "include": [
    //     "./src/**/*",
    //     "./app/**/*"
    // ],
    "exclude": [
        "node_modules",
        "babel.config.js",
        "metro.config.js",
        "jest.config.js"
        // ,
        // "tsconfig.json"
    ]
}